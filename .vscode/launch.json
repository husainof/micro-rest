  "version": "0.2.0",
  "configurations": [
    {
      "name": "Отладчик Python: Текущий файл с аргументами",
      "type": "debugpy",
      "request": "launch",
      "program": "test_task/main.py",
      "console": "integratedTerminal",
      "args": "test_task/config test_task/text"
    },
    {
      "name": "Launch file",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${file}"
    },
    {
      "name": "Connect to server",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "${workspaceFolder}",
      "port": 8080,
      "host": "127.0.0.1"
    },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": 0
    }
  ]
}
